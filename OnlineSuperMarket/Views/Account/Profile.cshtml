@using OnlineSuperMarket.Models.ViewModel;

@model UserViewModel;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/ClientAssets/style/profile.css" />


<div class="profileContainer">
    <div class="container">
        <div class="mainContent">
            <div class="leftBar">
                <div class="leftBar--heading">
                    <div class="avatarImg">
                        <img src="~/ClientAssets/img/@Model.Avatar" alt="avatar circle">
                    </div>
                    <div class="nameUser">
                        <p>@Model.UserName</p>
                        <div class="editIcon">
                            <i class="fa-solid fa-pen" style="color: #77797e;"></i><span>Edit Profile</span>
                        </div>
                    </div>
                </div>
                <div class="leftBar--content">
                    <div class="leftBar--content--items">
                        <i class="fa-light fa-user iconProfile"></i><a asp-action="Profile" asp-controller="Account">My Account</a>
                        <ul>
                            <li class="active info">Profile</li>
                            <li class="password">Change password</li>
                        </ul>
                        <p class="active"><i class="fa-light fa-note iconOrder"></i><a asp-action="MyOrder" asp-controller="Account">My Order</a></p>
                    </div>
                </div>
            </div>
            <div class="rightContent">
                <div class="rightContent--heading">
                    <p class="title">My Profile</p>
                    <p class="subtitle">Manage profile information to protect your account</p>
                </div>
                <div class="rightContent--bottom--information">
                    <div class="groupInput groupInfomation">
                        <form id="changeInfoForm" method="post">
                            <div class="formItem">
                                <label for="Username">Username* </label>
                                <input type="text" name="Username" required value="@Model.UserName">
                            </div>
                            <div class="formItem">
                                <label for="Firstname">First name* </label>
                                <input type="text" name="Firstname" required value="@Model.FirstName">
                            </div>
                            <div class="formItem">
                                <label for="Lastname">Last name*</label>
                                <input type="text" name="Lastname" required value="@Model.LastName">
                            </div>
                            <div class="formItem">
                                <label for="email">Email* </label>
                                <input type="email" name="email" required value="@Model.Email">
                            </div>
                            <div class="formItem">
                                <label for="PhoneNumber">Phone number* </label>
                                <input type="text" name="PhoneNumber" required value="@Model.PhoneNumber">
                            </div>
                            <div class="formItem">
                                <label for="Address">Address* </label>
                                <input type="text" name="Address" required value="@Model.Address">
                            </div>
                            <button class="profileBtn" type="submit">Submit</button>
                        </form>
                    </div>
                    <div class="displayNone groupInput groupChangepass">
                        <form method="post" id="changePasswordForm">
                            <div class="formItem">
                                <label>Username* </label>
                                <input type="text" value="@Model.UserName" disabled>
                            </div>
                            <div class="formItem">
                                <label>Email* </label>
                                <input type="email" value="@Model.Email" disabled>
                            </div>
                            <div class="formItem">
                                <label for="password">Current Password* </label>
                                <input type="password" name="currentPassword" required>
                            </div>
                            <div class="formItem">
                                <label for="newpassword">New Password* </label>
                                <input type="password" name="newPassword" required>
                            </div>
                            <div class="formItem">
                                <label for="newpasswordconfirm">New Password* </label>
                                <input type="password" name="newPasswordConfirm" required>
                            </div>
                            <button class="profileBtn" type="submit">Submit</button>
                        </form>
                    </div>
                    <div class="avatarField">
                        <form style="text-align: center;" id="changeAvatar" method="post" enctype="multipart/form-data">
                            <img class="avtImage" src="~/ClientAssets/img/@Model.Avatar" alt="avatar Image">
                            <div style="margin: 0 auto;" class="formItem">
                                <label style="padding: 0;" for="ImageFile">Choose an Image</label>
                                <input type="file" name="ImageFile" id="ImageFile" accept="image/*" />
                            </div>
                            <button class="changeAvt" type="submit">Upload</button>
                            <div class="description">
                                <p>Maximum size is 1MB</p>
                                <p>Format: .JPEG, .PNG</p>
                            </div>
                        </form>

                    </div>
                </div>

            </div>
        </div>
    </div>

</div>
<script src="~/ClientAssets/js/profile-toggle.js"></script>