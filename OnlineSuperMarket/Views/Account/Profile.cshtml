@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/ClientAssets/style/profile.css" />


<div class="profileContainer">
    <div class="container">
        <div class="mainContent">
            <div class="leftBar">
                <div class="leftBar--heading">
                    <div class="avatarImg">
                        <img src="~/ClientAssets/img/default.jpg" alt="avatar circle">
                    </div>
                    <div class="nameUser">
                        <p>BoongDev</p>
                        <div class="editIcon">
                            <i class="fa-solid fa-pen" style="color: #77797e;"></i><span>Edit Profile</span>
                        </div>
                    </div>
                </div>
                <div class="leftBar--content">
                    <div class="leftBar--content--items">
                        <ul>
                            <li><i class="fa-light fa-user iconProfile"></i>My Account</li>
                            <li class="active info">Profile</li>
                            <li class="password">Change password</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="rightContent">
                <div class="rightContent--heading">
                    <p class="title">My Profile</p>
                    <p class="subtitle">Manage profile information to protect your account</p>
                </div>
                <div class="rightContent--bottom--information">
                    <div class="groupInput groupInfomation">
                        <form>
                            <div class="formItem">
                                <label>Username* </label>
                                <input type="text" name="username" required>
                            </div>
                            <div class="formItem">
                                <label>First name* </label>
                                <input type="text" name="name" required>
                            </div>
                            <div class="formItem">
                                <label>Last name*</label>
                                <input type="text" name="name" required>
                            </div>
                            <div class="formItem">
                                <label>Email* </label>
                                <input type="email" name="email" required>
                            </div>
                            <div class="formItem">
                                <label>Phone number* </label>
                                <input type="text" name="username" required>
                            </div>
                            <div class="formItem">
                                <label>Address* </label>
                                <input type="text" name="username" required>
                            </div>
                            <div class="formItem checkbox">
                                <label>Gender </label>
                                <div class="input">
                                    <input type="checkbox">
                                    <label>Male</label>
                                    <input type="checkbox">
                                    <label>Female</label>
                                    <input type="checkbox">
                                    <label>More..</label>
                                </div>
                            </div>
                            <div class="formItem checkbox">
                                <label>Date of birth</label>
                                <div class="input">
                                    <select>
                                        <option>1</option>
                                        <option>2</option>
                                        <option>3</option>
                                    </select>
                                    <select>
                                        <option>January</option>
                                        <option>2</option>
                                        <option>3</option>
                                    </select>
                                    <select>
                                        <option>2000</option>
                                        <option>2</option>
                                        <option>3</option>
                                    </select>
                                </div>
                            </div>
                            <button class="profileBtn" type="submit">Submit</button>
                        </form>
                    </div>
                    <div class="displayNone groupInput groupChangepass">
                        <form>
                            <div class="formItem">
                                <label>Username* </label>
                                <input type="text" name="username" required>
                            </div>
                            <div class="formItem">
                                <label>Email* </label>
                                <input type="email" name="email" required>
                            </div>
                            <div class="formItem">
                                <label>Current Password* </label>
                                <input type="text" name="password" required>
                            </div>
                            <div class="formItem">
                                <label>New Password* </label>
                                <input type="text" name="password" required>
                            </div>
                            <div class="formItem">
                                <label>New Password* </label>
                                <input type="text" name="password" required>
                            </div>
                            <button class="profileBtn" type="submit">Submit</button>
                        </form>
                    </div>
                    <div class="avatarField">
                        <img class="avtImage" src="~/ClientAssets/img/default.jpg" alt="avatar Image">
                        <button class="changeAvt" type="submit">Choose Image</button>
                        <div class="description">
                            <p>Maximum volume is 1MB</p>
                            <p>Format: .JPEG, .PNG</p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

</div>
<script src="~/ClientAssets/js/profile-toggle.js"></script>