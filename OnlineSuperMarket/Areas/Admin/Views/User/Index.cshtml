@using OnlineSuperMarket.Models;
@model IEnumerable<User>
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">Users Managements</h4>
                <div class="ms-auto text-end">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home" asp-area="Admin">Home</a></li>
                            <li style="padding: 0 6px;"><i class="fa-solid fa-angle-right"></i></li>
                            <li>
                                Users
                            </li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Overlay product -->
    <!-- ============================================================== -->
    <div class="overlayProduct"></div>
    <!-- ============================================================== -->
    <!-- End overlay product -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Create product -->
    <!-- ============================================================== -->
    
    @*@await Html.PartialAsync("~/Areas/Admin/Views/User/Create.cshtml")*@

    <!-- ============================================================== -->
    <!-- End form create product -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="searchProduct">
                            <div class="createBtn"><a asp-action="Create" asp-controller="User" asp-area="Admin">Create new admin account</a> <i class="fa-solid fa-plus addCreate"></i></div>
                        <form class="searchForm" asp-action="Index" asp-controller="User" asp-area="Admin" method="get">
                            <div class="searchForm--input col-sm-8">
                                <input type="text" name="search" value="@ViewData["CurrentFilter"]" />
                            </div>
                            <div class="searchForm--btn col-sm-4">
                                <button type="submit">Search</button>
                            </div>
                        </form>
                        </div>
                        <div class="table-responsive">
                            <table id="zero_config" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        
                                        <th scope="col">Username</th>
                                        <th scope="col">Email</th>
                                        <th scope="col">Address</th>
                                        <th scope="col">Phone</th>
                                        <th scope="col">Locked out</th>
                                        <th scope="col">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            
                                            <td>@item.UserName</td>
                                            <td>@item.Email</td>
                                            <td>@item.Address</td>
                                            <td>@item.PhoneNumber</td>
                                            @if (@item.LockoutEnabled == false)
                                            {
                                                <td>Not Locked</td>
                                            }
                                            else
                                            {
                                                <td>Locked</td>
                                            }
                                            <td>
                                                <a asp-action="Update" asp-route-id="@item.Id">
                                                    <button type="button" class="btn btn-cyan btn-sm text-white">
                                                        Update
                                                    </button>
                                                </a>
                                                <a asp-action="Details" asp-route-id="@item.Id">
                                                    <button type="button"
                                                        class="btn btn-success btn-sm text-white">
                                                        Details
                                                    </button>
                                                </a>
@*                                                <a class="btn btn-success btn-tone m-r-5" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                                <a class="btn btn-success btn-tone m-r-5" asp-action="Update" asp-route-id="@item.Id">Update</a>*@
                                                    <a asp-action="Delete" asp-route-id="@item.Id">
                                                        <button type="submit" class="btn btn-danger btn-sm text-white">
                                                            Delete
                                                        </button>
                                                    </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        
                                        <th scope="col">Username</th>
                                        <th scope="col">Email</th>
                                        <th scope="col">Address</th>
                                        <th scope="col">Phone</th>
                                        <th scope="col">Locked out</th>
                                        <th scope="col">Actions</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End PAge Content -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Right sidebar -->
        <!-- ============================================================== -->
        <!-- .right-sidebar -->
        <!-- ============================================================== -->
        <!-- End Right sidebar -->
        <!-- ============================================================== -->
    </div>
    <!-- ============================================================== -->
    <!-- End Container fluid  -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- footer -->
    <!-- ============================================================== -->
    <footer class="footer text-center">
        All Rights Reserved by Matrix-admin. Designed and Developed by
        <a href="https://www.wrappixel.com">WrapPixel</a>.
    </footer>
    <!-- ============================================================== -->
    <!-- End footer -->
    <!-- ============================================================== -->
</div>
